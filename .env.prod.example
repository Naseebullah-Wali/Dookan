# Production Environment Configuration
# Copy this file to .env for production deployment

# ===============================
# REQUIRED: Security Configuration
# ===============================
# Generate secure random strings for these values
# Example: openssl rand -base64 32

JWT_SECRET=
JWT_REFRESH_SECRET=

# ===============================
# REQUIRED: CORS Configuration
# ===============================
# Add your production domain(s), separated by commas
# Example: https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

CORS_ORIGIN=

# ===============================
# REQUIRED: Frontend Configuration
# ===============================
# The URL where your backend API is accessible
# Example: https://api.yourdomain.com or https://yourdomain.com/api

VITE_API_BASE_URL=

# ===============================
# Optional: Contact Information
# ===============================

VITE_SUPPORT_EMAIL=info@dookan.af
VITE_SUPPORT_PHONE=4915217735657
VITE_WHATSAPP_NUMBER=4915217735657

# ===============================
# Optional: JWT Expiration
# ===============================

JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===============================
# Optional: Rate Limiting
# ===============================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ===============================
# Optional: File Upload
# ===============================

MAX_FILE_SIZE=5242880

# ===============================
# Optional: Supabase Configuration
# ===============================
# Uncomment and fill these if you're using Supabase

# SUPABASE_URL=
# SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_KEY=

