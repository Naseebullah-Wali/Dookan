# Production Environment Configuration for Dookan
# Copy this file to .env and fill in your production values
# IMPORTANT: Never commit the actual .env file to version control!

# ============================================
# Node Environment
# ============================================
NODE_ENV=production
PORT=3000
API_VERSION=v1

# ============================================
# Database Configuration
# ============================================
DB_PATH=/root/dookan/backend-afghan-grocery/db/database.sqlite
# OR if using PostgreSQL:
# DB_HOST=your-db-host
# DB_PORT=5432
# DB_NAME=dookan_production
# DB_USER=dookan_user
# DB_PASSWORD=your-secure-password

# ============================================
# JWT Authentication
# ============================================
# Generate secure keys: openssl rand -base64 32
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-change-this
JWT_REFRESH_SECRET=your-very-long-and-secure-jwt-refresh-secret-key-change-this
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=https://zmadookan.com,https://www.zmadookan.com

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/root/dookan/backend-afghan-grocery/uploads

# ============================================
# Supabase Configuration (if using)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# ============================================
# PayPal Configuration (for payments)
# ============================================
PAYPAL_MODE=live
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# ============================================
# Email Configuration (for notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SUPPORT_EMAIL=support@zmadookan.com

# ============================================
# Frontend Configuration (for frontend app)
# ============================================
VITE_API_BASE_URL=https://zmadookan.com/api
VITE_APP_NAME=Dookan
VITE_APP_VERSION=1.0.0
VITE_SUPPORT_EMAIL=support@zmadookan.com
VITE_SUPPORT_PHONE=+49152xxxxxxxx
VITE_WHATSAPP_NUMBER=+49152xxxxxxxx

# ============================================
# Analytics & Tracking (optional)
# ============================================
GOOGLE_ANALYTICS_ID=your-google-analytics-id
SENTRY_DSN=your-sentry-dsn

# ============================================
# Security & Logging
# ============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# ============================================
# Domain & SSL
# ============================================
DOMAIN=zmadookan.com
SITE_URL=https://zmadookan.com
